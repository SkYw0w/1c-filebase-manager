{
  "name": "1c-filebase-manager",
  "displayName": "1C FileBase Manager",
  "description": "Универсальный инструмент для управления файловыми информационными базами 1С с поддержкой различных источников (Git, исходники, файлы .cf/.cfe)",
  "version": "0.1.0",
  "publisher": "skywow",
  "icon": "resources/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/SkYw0w/1c-filebase-manager.git"
  },
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "1c",
    "1С",
    "infobase",
    "информационная база",
    "onescript",
    "git"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "extensionDependencies": ["vscode.git"],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "1c-filebase-manager",
          "title": "1C FileBase Manager",
          "icon": "resources/icon.png"
        }
      ]
    },
    "views": {
      "1c-filebase-manager": [
        {
          "type": "webview",
          "id": "1c-filebase-manager.mainView",
          "name": "Менеджер баз 1С",
          "icon": "resources/icon.png"
        }
      ]
    },
    "commands": [
      {
        "command": "1c-filebase-manager.openManager",
        "title": "Открыть 1C FileBase Manager",
        "category": "1C"
      },
      {
        "command": "1c-filebase-manager.checkDependencies",
        "title": "Проверить зависимости",
        "category": "1C"
      },
      {
        "command": "1c-filebase-manager.installDependencies",
        "title": "Установить зависимости OneScript",
        "category": "1C"
      },
      {
        "command": "1c-filebase-manager.refreshBases",
        "title": "Обновить список баз",
        "category": "1C"
      }
    ],
    "configuration": {
      "title": "1C FileBase Manager",
      "properties": {
        "1c-filebase-manager.platformVersion": {
          "type": "string",
          "default": "8.3.27.1688",
          "description": "Версия платформы 1С (формат: 8.3.27.1688)"
        },
        "1c-filebase-manager.baseDirectory": {
          "type": "string",
          "default": "",
          "description": "Каталог для создания информационных баз"
        },
        "1c-filebase-manager.sourceDirectory": {
          "type": "string",
          "default": "src/cf",
          "description": "Путь к исходникам в репозитории (по умолчанию src/cf)"
        },
        "1c-filebase-manager.onescriptPath": {
          "type": "string",
          "default": "oscript",
          "description": "Путь к исполняемому файлу OneScript"
        },
        "1c-filebase-manager.logLevel": {
          "type": "string",
          "enum": [
            "ERROR",
            "WARN",
            "INFO",
            "DEBUG"
          ],
          "default": "INFO",
          "description": "Уровень логирования"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run compile:extension && npm run compile:webview",
    "compile:extension": "tsc -p ./",
    "compile:webview": "tsc -p ./src/webview",
    "watch": "npm run watch:extension & npm run watch:webview",
    "watch:extension": "tsc -watch -p ./",
    "watch:webview": "tsc -watch -p ./src/webview",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.70.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
